<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeriesGuideTheme" parent="Theme.Sherlock.ForceOverflow">
        <item name="vpiCirclePageIndicatorStyle">@style/Widget.CirclePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/Widget.TabPageIndicator.Text</item>
    </style>

    <style name="ScrollingLayout">
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/inline_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>