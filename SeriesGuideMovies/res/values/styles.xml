<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="seriesguidemoviestheme_ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/sgm_actionbar_background</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_seriesguidemoviestheme</item>
        <item name="android:background">@drawable/sgm_actionbar_background</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_seriesguidemoviestheme</item>
    </style>

    <style name="seriesguidemoviestheme_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_seriesguidemoviestheme</item>
    </style>

    <style name="seriesguidemoviestheme_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_seriesguidemoviestheme</item>
        <item name="android:background">@drawable/tab_indicator_ab_seriesguidemoviestheme</item>
    </style>

    <style name="seriesguidemoviestheme_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_seriesguidemoviestheme</item>
        <item name="android:background">@drawable/spinner_background_ab_seriesguidemoviestheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_seriesguidemoviestheme</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/inline_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorLink">@color/text_link</item>
    </style>

    <style name="TextAppearance.XSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="TextAppearance.XSmall.Dim">
        <item name="android:textColor">@color/text_dim</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Small.Dim">
        <item name="android:textColor">@color/text_dim</item>
    </style>

    <style name="TextAppearance.Small.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Medium.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.Large.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.XLarge">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextAppearance.XLarge.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>